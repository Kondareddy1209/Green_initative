<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Verify OTP • MyGreenHome</title>
  <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <div class="auth-container">
    <h2>Verify OTP</h2>
    <p>We've sent a 6-digit code to <strong><%= username %></strong></p>

    <% if (error) { %>
        <p id="serverError" class="error-msg" style="text-align: center;"><%= error %></p>
    <% } %>
    <% if (message) { %>
        <p class="message-success" style="text-align: center; color: green;"><%= message %></p>
    <% } %>

    <form id="otpForm" action="/auth/verify-otp" method="POST" novalidate>
      <input type="hidden" name="username" value="<%= username %>">
      <input type="hidden" name="isPasswordReset" value="<%= typeof isPasswordReset !== 'undefined' && isPasswordReset ? 'true' : 'false' %>">

      <div class="form-group">
        <label for="otp">OTP Code</label>
        <input
          id="otp"
          name="otp"
          type="text"
          minlength="6"
          maxlength="6"
          placeholder="123456"
          required
          autocomplete="one-time-code"
        >
      </div>
      <p id="otpError" class="error-msg"></p>

      <button type="submit" id="verifyBtn" disabled>Verify & Continue</button>
    </form>

  <script>
    const otpInput = document.getElementById('otp');
    const verifyBtn = document.getElementById('verifyBtn');
    const otpError = document.getElementById('otpError');
    const isPasswordResetInput = document.querySelector('input[name="isPasswordReset"]');
    const isPasswordReset = isPasswordResetInput && isPasswordResetInput.value === 'true';
    const otpForm = document.getElementById('otpForm');

    // Enable button when 6 digits entered
    otpInput.addEventListener('input', () => {
      otpError.textContent = '';
      if (document.getElementById('serverError')) {
          document.getElementById('serverError').textContent = ''; // Clear server error on input
      }
      const val = otpInput.value;
      verifyBtn.disabled = !( /^\d{6}$/.test(val) );
    });

    otpForm.addEventListener('submit', e => {
      const val = otpInput.value;
      if (!/^\d{6}$/.test(val)) {
        e.preventDefault();
        otpError.textContent = 'Please enter exactly 6 digits.';
        otpInput.classList.add('shake');
        setTimeout(() => otpInput.classList.remove('shake'), 300);
      }
      // The backend route '/auth/verify-otp' now handles the redirect logic based on isPasswordReset
      // No need to change form action.
    });
  </script>
</body>
</html>