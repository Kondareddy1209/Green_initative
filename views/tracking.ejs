<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tracking & Comparison â€¢ MyGreenHome</title>
    <link rel="stylesheet" href="/styles/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #eef2f7;
            font-family: Arial, sans-serif;
        }
        .tracking-container {
            max-width: 900px;
            margin: 30px auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        .section-header {
            color: #2c3e50;
            margin-bottom: 20px;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .comparison-card {
            background-color: #e8f5e9; /* Light green background */
            border: 1px solid #c8e6c9;
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 25px;
            font-size: 1.1em;
            color: #1b5e20; /* Darker green text */
            font-weight: bold;
            text-align: center;
        }
        .comparison-card.positive-change { /* For increased consumption */
            background-color: #ffebee; /* Light red */
            border-color: #ffcdd2;
            color: #b71c1c; /* Darker red */
        }
        .comparison-card.negative-change { /* For decreased consumption */
            background-color: #e8f5e9; /* Light green */
            border-color: #c8e6c9;
            color: #1b5e20;
        }
        .comparison-card.no-change {
             background-color: #e3f2fd; /* Light blue */
             border-color: #bbdefb;
             color: #1565c0;
        }

        .chart-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 25px;
        }
        .chart-box {
            background: #fff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            min-height: 250px; /* Ensure charts have space */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .chart-box h4 {
            margin-top: 0;
            color: #555;
            text-align: center;
        }
        .history-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .history-table th, .history-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }
        .history-table th {
            background-color: #f2f2f2;
            color: #333;
            font-size: 1.1em;
        }
        .history-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .history-table tbody tr:hover {
            background-color: #f1f1f1;
        }
        .no-data {
            text-align: center;
            padding: 30px;
            font-style: italic;
            color: #777;
        }
        .download-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            transition: background-color 0.3s ease;
        }
        .download-btn:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="tracking-container">
        <div class="section-header">
            <h2>ðŸ“ˆ Your Energy Usage Tracking</h2>
            <a href="/dashboard" class="btn" style="background-color: #6c757d;">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <% if (comparison) { %>
            <div class="comparison-card <%= comparison.change > 0 ? 'positive-change' : (comparison.change < 0 ? 'negative-change' : 'no-change') %>">
                <%= comparison.message %>
            </div>
        <% } else if (historicalResults && historicalResults.length === 1) { %>
            <div class="comparison-card no-change">
                Only one analysis available. Upload another bill to see a comparison!
            </div>
        <% } else { %>
            <div class="no-data">
                No historical data available. Upload a bill to start tracking!
            </div>
        <% } %>

        <div class="chart-grid">
            <div class="chart-box">
                <h4>Consumption Trend (kWh)</h4>
                <canvas id="consumptionLineChart"></canvas>
            </div>
            <div class="chart-box">
                <h4>COâ‚‚ Emission Trend (kg)</h4>
                <canvas id="co2LineChart"></canvas>
            </div>
        </div>

        <div class="section-header">
            <h3>Detailed Historical Data</h3>
            <a href="/dashboard/download-report" class="download-btn">
                <i class="fas fa-file-pdf"></i> Download Full Report
            </a>
        </div>
        
        <% if (historicalResults && historicalResults.length > 0) { %>
            <table class="history-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Bill ID</th> <th>Consumption (kWh)</th>
                        <th>COâ‚‚ (kg)</th>
                        <th>Bill Amount (â‚¹)</th>
                        <th>Tip</th>
                    </tr>
                </thead>
                <tbody>
                    <% historicalResults.forEach(result => { %>
                        <tr>
                            <td><%= new Date(result.analysisDate).toLocaleDateString() %></td>
                            <td><%= result.billId || 'N/A' %></td> <td><%= result.totalConsumption %></td>
                            <td><%= result.carbonKg %></td>
                            <td>â‚¹<%= result.totalAmount.toFixed(2) %></td>
                            <td><%= result.savingsTip %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="no-data">
                No historical data to display in the table.
            </div>
        <% } %>

    </div>

    <script>
        const historicalData = <%- JSON.stringify(historicalResults || []) %>;

        if (historicalData.length > 0) {
            // Sort data by date ascending for charts
            historicalData.sort((a, b) => new Date(a.analysisDate) - new Date(b.analysisDate));

            const labels = historicalData.map(d => new Date(d.analysisDate).toLocaleDateString());
            const consumptionValues = historicalData.map(d => d.totalConsumption);
            const co2Values = historicalData.map(d => d.carbonKg);

            // Consumption Line Chart
            const consumptionCtx = document.getElementById('consumptionLineChart').getContext('2d');
            new Chart(consumptionCtx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Consumption (kWh)',
                        data: consumptionValues,
                        borderColor: '#2ecc71',
                        backgroundColor: 'rgba(46, 204, 113, 0.2)',
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        tooltip: { mode: 'index', intersect: false },
                        title: { display: false }
                    },
                    scales: {
                        x: { beginAtZero: false },
                        y: { beginAtZero: true, title: { display: true, text: 'kWh' } }
                    }
                }
            });

            // CO2 Emission Line Chart
            const co2Ctx = document.getElementById('co2LineChart').getContext('2d');
            new Chart(co2Ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'COâ‚‚ Emission (kg)',
                        data: co2Values,
                        borderColor: '#f39c12',
                        backgroundColor: 'rgba(243, 156, 18, 0.2)',
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        tooltip: { mode: 'index', intersect: false },
                        title: { display: false }
                    },
                    scales: {
                        x: { beginAtZero: false },
                        y: { beginAtZero: true, title: { display: true, text: 'kg COâ‚‚' } }
                    }
                }
            });
        }
    </script>

    <%- include('partials/footer') %>
</body>
</html>