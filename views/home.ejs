<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home â€¢ MyGreenHome</title>
  <link rel="stylesheet" href="/styles/dashboard.css">
  <style>
    html {
      scroll-behavior: smooth;
    }

    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #eef2f7;
    }

    .sidebar {
      width: 250px;
      background: #2ecc71;
      color: white;
      height: 100vh;
      padding: 20px;
      position: fixed;
      top: 0;
      left: -260px;
      transition: left 0.3s ease;
      z-index: 1000;
      overflow-y: auto;
    }

    .sidebar.open {
      left: 0;
    }

    .sidebar h2 {
      font-size: 22px;
      margin-bottom: 30px;
    }

    .sidebar a {
      color: white;
      text-decoration: none;
      margin: 15px 0;
      display: block;
      font-weight: bold;
      opacity: 0;
      transform: translateX(-20px);
      transition: opacity 0.4s ease, transform 0.4s ease;
    }

    .sidebar.open a {
      opacity: 1;
      transform: translateX(0);
    }

    .sidebar a:nth-child(2) { transition-delay: 0.1s; }
    .sidebar a:nth-child(3) { transition-delay: 0.2s; }
    .sidebar a:nth-child(4) { transition-delay: 0.3s; }
    .sidebar a:nth-child(5) { transition-delay: 0.4s; }

    .logout {
      background: #27ae60;
      padding: 10px 15px;
      border-radius: 6px;
      text-align: center;
      margin-top: 30px;
    }

    .logout:hover {
      background: #1f8c4e;
    }

    .menu-button {
      position: fixed;
      top: 15px;
      left: 5px;
      background: none;
      border: none;
      cursor: pointer;
      z-index: 1100;
      width: 30px;
      height: 30px;
      transition: left 0.3s ease;
    }

    .menu-icon,
    .menu-icon::before,
    .menu-icon::after {
      content: '';
      position: absolute;
      width: 30px;
      height: 3px;
      background-color: #2ecc71;
      transition: 0.3s ease;
    }

    .menu-icon {
      top: 50%;
      left: 0;
      transform: translateY(-50%);
    }

    .menu-icon::before {
      top: -10px;
      left: 0;
    }

    .menu-icon::after {
      top: 10px;
      left: 0;
    }

    .menu-button.active .menu-icon {
      background-color: transparent;
    }

    .menu-button.active .menu-icon::before {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .menu-button.active .menu-icon::after {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    .main-content {
      margin-left: 0;
      padding: 20px;
      transition: margin-left 0.3s ease;
    }

    .main-content.shifted {
      margin-left: 250px;
    }

    .cards {
      display: flex;
      gap: 20px;
      margin-top: 60px;
      flex-wrap: wrap;
    }

    .card {
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      flex: 1;
      min-width: 250px;
    }

    .card h4 {
      margin-bottom: 10px;
      color: #2c3e50;
    }

    .card p {
      font-size: 18px;
      font-weight: bold;
      color: #2980b9;
    }

    .highlight-tip {
      background: #fff;
      border-left: 6px solid #f39c12;
      padding: 20px;
      margin-top: 20px;
      border-radius: 10px;
    }

    .highlight-tip p {
      color: #c0392b;
      font-size: 17px;
      font-weight: bold;
    }

    .tips-section {
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      margin-top: 30px;
    }

    ul {
      padding-left: 20px;
    }

    ul li {
      margin-bottom: 10px;
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <h2>ðŸ“‹ Menu</h2>
    <a href="/dashboard/profile">ðŸ‘¤ Profile</a>
    <a href="/dashboard">ðŸ“¤ Dashboard</a>
    <% if (summary) { %>
      <a href="#summary">ðŸ“Š Results</a>
    <% } %>
    <a href="#tips">ðŸ’¡ Tips</a>
    <a href="/dashboard/logout" class="logout">ðŸ”š Logout</a>
  </div>

  <!-- Menu Toggle -->
  <button id="menuToggle" class="menu-button" onclick="toggleMenu()">
    <span class="menu-icon"></span>
  </button>

  <!-- Main Content -->
  <div id="mainContent" class="main-content">
    <h3 style="margin-top: 60px;">ðŸ‘‹ Welcome, <%= user.username %>!</h3>

    <% if (summary) { %>
      <div id="summary" class="cards">
        <div class="card">
          <h4>Total Consumption</h4>
          <p><%= summary.totalConsumption %> kWh</p>
        </div>
        <div class="card">
          <h4>COâ‚‚ Emitted</h4>
          <p><%= summary.carbonKg %> kg/month</p>
        </div>
        <div class="card">
          <h4>Estimated Bill</h4>
          <p>
            <% if (summary.bill.totalAmount && summary.bill.totalAmount < 100000) { %>
              â‚¹<%= summary.bill.totalAmount.toFixed(2) %>
            <% } else { %>
              <span style="color: red; font-weight: bold;">Unrealistic Bill Detected</span>
            <% } %>
          </p>
        </div>
      </div>

      <div class="highlight-tip">
        <h4>ðŸ“Œ Suggested Tip</h4>
        <p><%= summary.savingsTip %></p>
      </div>
    <% } else { %>
      <p style="color: gray;">No bill data found. Please upload your electricity bill.</p>
    <% } %>

    <div id="tips" class="tips-section">
      <h4>ðŸ’¡ Power-saving Tips:</h4>
      <ul>
        <% tips.forEach(t => { %>
          <li><%= t %></li>
        <% }) %>
      </ul>
    </div>
  </div>

  <!-- JS -->
  <script>
    function toggleMenu() {
      const sidebar = document.getElementById('sidebar');
      const mainContent = document.getElementById('mainContent');
      const menuBtn = document.getElementById('menuToggle');

      sidebar.classList.toggle('open');
      mainContent.classList.toggle('shifted');
      menuBtn.classList.toggle('active');
    }

    document.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll(".sidebar a").forEach(link => {
        link.addEventListener("click", () => {
          document.getElementById('sidebar').classList.remove('open');
          document.getElementById('mainContent').classList.remove('shifted');
          document.getElementById('menuToggle').classList.remove('active');
        });
      });
    });
  </script>
</body>
</html>
