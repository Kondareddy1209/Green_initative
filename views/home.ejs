<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home â€¢ MyGreenHome</title>
  <link rel="stylesheet" href="/styles/dashboard.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: #eef2f7;
      overflow-x: hidden;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: -260px;
      width: 240px;
      height: 100vh;
      background-color: #2ecc71;
      color: #fff;
      padding: 20px;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
      transition: left 0.3s ease;
      z-index: 1000;
    }

    .sidebar.open {
      left: 0;
    }

    .sidebar h2 {
      font-size: 20px;
      margin-bottom: 25px;
    }

    .sidebar a {
      color: white;
      display: flex;
      align-items: center;
      text-decoration: none;
      padding: 10px 0;
      font-weight: 500;
      gap: 10px;
      transition: background 0.3s;
    }

    .sidebar a:hover {
      background-color: rgba(255, 255, 255, 0.1);
      border-radius: 5px;
      padding-left: 5px;
    }

    .menu-button {
      position: fixed;
      top: 15px;
      left: 15px;
      background: none;
      border: none;
      font-size: 24px;
      color: #2ecc71;
      z-index: 1100;
      cursor: pointer;
    }

    .dark-toggle-button {
      position: fixed;
      top: 15px;
      right: 15px;
      background: none;
      border: none;
      font-size: 24px;
      color: #2ecc71;
      z-index: 1100;
      cursor: pointer;
    }

    .main-content {
      padding: 20px;
      margin-left: 0;
      transition: margin-left 0.3s ease;
    }

    .main-content.shifted {
      margin-left: 240px;
    }

    .cards {
      display: flex;
      gap: 20px;
      margin-top: 60px;
      flex-wrap: wrap;
    }

    .card {
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      flex: 1;
      min-width: 250px;
    }

    .card h4 {
      color: #2c3e50;
      margin-bottom: 10px;
    }

    .green-text {
      color: #27ae60;
      font-weight: bold;
      font-size: 18px;
    }

    .blue-text {
      color: #2980b9;
      font-weight: bold;
      font-size: 18px;
    }

    .orange-text {
      color: #e67e22;
      font-weight: bold;
      font-size: 18px;
    }

    .red-text {
      color: red;
      font-weight: bold;
      font-size: 18px;
    }

    .highlight-tip {
      background: #fff;
      border-left: 6px solid #f39c12;
      padding: 20px;
      margin-top: 20px;
      border-radius: 10px;
    }

    .tips-section {
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      margin-top: 30px;
    }

    ul {
      padding-left: 20px;
    }

    ul li {
      margin-bottom: 10px;
    }

    .download-button-wrapper {
      margin-top: 40px;
      text-align: center;
    }

    .download-button-wrapper a {
      padding: 12px 25px;
      background-color: #2ecc71;
      color: white;
      border-radius: 8px;
      text-decoration: none;
    }

    .download-button-wrapper a:hover {
      background-color: #27ae60;
    }

    /* âœ… Dark Mode Styles */
    body.dark-mode {
      background: #1e1e1e;
      color: #fff;
    }

    body.dark-mode .card,
    body.dark-mode .tips-section,
    body.dark-mode .highlight-tip {
      background: #2e2e2e;
      color: #eee;
    }

    body.dark-mode .sidebar {
      background-color: #333;
    }

    body.dark-mode .dark-toggle-button {
      color: #f1c40f;
    }

    @media (max-width: 768px) {
      .sidebar {
        width: 200px;
      }

      .main-content.shifted {
        margin-left: 0;
      }

      .cards {
        flex-direction: column;
      }
    }
  </style>
</head>

<body>

  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <h2><i class="fas fa-leaf"></i> MyGreenHome</h2>
    <a href="/dashboard/profile"><i class="fas fa-user"></i> Profile</a>
    <a href="/dashboard"><i class="fas fa-upload"></i> Dashboard</a>
    <% if (summary) { %>
      <a href="#summary"><i class="fas fa-chart-bar"></i> Results</a>
    <% } %>
    <a href="#tips"><i class="fas fa-lightbulb"></i> Tips</a>
    <a href="/dashboard/team"><i class="fas fa-users"></i> Team</a>
    <a href="/dashboard/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
  </div>

  <!-- Sidebar Toggle -->
  <button id="menuToggle" class="menu-button"><i class="fas fa-bars"></i></button>

  <!-- âœ… Dark Mode Toggle -->
  <button id="darkModeToggle" class="dark-toggle-button"><i class="fas fa-moon"></i></button>

  <!-- Main Content -->
  <div id="mainContent" class="main-content">
    <h3 style="margin-top: 60px;">ðŸ‘‹ Welcome, <%= user.username %>!</h3>

    <% if (summary) { %>
      <div id="summary" class="cards">
        <div class="card">
          <h4>Total Consumption</h4>
          <p class="green-text"><%= summary.totalConsumption %> kWh</p>
        </div>
        <div class="card">
          <h4>COâ‚‚ Emitted</h4>
          <p class="blue-text"><%= summary.carbonKg %> kg/month</p>
        </div>
        <div class="card">
          <h4>Estimated Bill</h4>
          <p>
            <% if (summary.bill.totalAmount && summary.bill.totalAmount < 100000) { %>
              <span class="orange-text">â‚¹<%= summary.bill.totalAmount.toFixed(2) %></span>
            <% } else { %>
              <span class="red-text">Unrealistic Bill Detected</span>
            <% } %>
          </p>
        </div>
      </div>

      <div class="highlight-tip">
        <h4>ðŸ“Œ Suggested Tip</h4>
        <p><%= summary.savingsTip %></p>
      </div>
    <% } else { %>
      <p style="color: gray;">ðŸ“­ No bill data found. Please upload your electricity bill.</p>
    <% } %>

    <div id="tips" class="tips-section">
      <h4>ðŸ’¡ Power-saving Tips:</h4>
      <ul>
        <% tips.forEach(t => { %>
          <li><%= t %></li>
        <% }) %>
      </ul>
    </div>

    <!-- âœ… Download Button Positioned at Bottom -->
    <div class="download-button-wrapper">
      <a href="/dashboard/download-report">
        <i class="fas fa-file-download"></i> Download Report (PDF)
      </a>
    </div>
  </div>

  <!-- JS: Sidebar & Dark Mode -->
  <script>
    const menuBtn = document.getElementById('menuToggle');
    const sidebar = document.getElementById('sidebar');
    const mainContent = document.getElementById('mainContent');

    menuBtn.addEventListener('click', () => {
      sidebar.classList.toggle('open');
      mainContent.classList.toggle('shifted');
    });

    document.querySelectorAll(".sidebar a").forEach(link => {
      link.addEventListener("click", () => {
        sidebar.classList.remove('open');
        mainContent.classList.remove('shifted');
      });
    });

    // ðŸŒ™ Dark Mode Toggle
    const darkToggle = document.getElementById('darkModeToggle');
    darkToggle.addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
      localStorage.setItem('theme', document.body.classList.contains('dark-mode') ? 'dark' : 'light');
    });

    // Apply theme on load
    window.addEventListener('DOMContentLoaded', () => {
      if (localStorage.getItem('theme') === 'dark') {
        document.body.classList.add('dark-mode');
      }
    });
  </script>
</body>
</html>
